# Public runtime config for the Next.js app in /web
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_STREAMLIT_UPLOADER_URL=

# Preferred templates source (platform CSV links generated as {BASE_URL}/{platform}.csv)
NEXT_PUBLIC_TEMPLATES_BASE_URL=

# Fallback used only when NEXT_PUBLIC_TEMPLATES_BASE_URL is empty
# App will compute: {NEXT_PUBLIC_API_BASE_URL}/v1/templates/{platform}.csv
NEXT_PUBLIC_API_BASE_URL=

NEXT_PUBLIC_CSV_DOCS_URL=
NEXT_PUBLIC_SUPPORT_EMAIL=admin@earnsignalstudio.com

# Server-only vars for /api/notify Postmark delivery
# If these are missing, /api/notify logs fallback and still returns 202.
POSTMARK_SERVER_TOKEN=
POSTMARK_FROM_EMAIL=
POSTMARK_TO_EMAIL=
